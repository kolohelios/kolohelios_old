.row
  .col.s12.center
    h3.heading Admin
.container
  .row(ng-hide='activeUser')
    .col.s12.center
      form(name='newPost')
        .form-group
          label(for='email') Email
          input.form-control(type='email', name='email', ng-model='user.email')
        .form-group
          label(for='password') Password
          input.form-control(type='password', name='password', ng-model='user.password')
        .form-group
          button.form-control.btn.btn-primary(ng-click='loginUser(user)') Login
  .row(ng-show='activeUser')
    .col.s12.center
      p: a(ng-click='logout()') Logout
      p: a(ui-sref='posts.new') New Blog Post
      p: a(ui-sref='projects.new') New Project
